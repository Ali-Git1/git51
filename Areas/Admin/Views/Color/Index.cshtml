@using BigonWebUI.Models.Entities
@model List<Color>

<div class="card">
    <div class="card-header">
        <div>
            <h5>Colors</h5>
            <a class="btn btn-success" asp-action="create" asp-controller="color">+Add</a>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Color</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody>
                   @foreach(var color in Model)
                   {
                        <tr>

                            <td><span color style="background:@color.HexCode"></span> </td>
                            <td>@color.Name</td>
                            <td>
                                <a asp-action="details" asp-controller="color" asp-route-id="@color.Id" class="btn btn-primary"><i class="fa-solid fa-info text-white"></i> Info</a>
                                <a asp-action="edit" asp-controller="color" asp-route-id="@color.Id" class="btn btn-warning"><i class="fa-solid fa-warning text-white"></i> Edit</a>
                                <a onclick="removeColor(@color.Id, '@color.Name')" class="btn btn-danger"><i class="fa-solid fa-trash text-white"></i> Remove</a>
                            </td>
                        </tr>
                   }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>



@section custom_js{
    <script>
        function removeColor(id,name){
            Swal.fire({
                title: "Əminsinizmi?",
                text: `${name} rengi silmek isteyirsinizmi!`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "Xeyr",
                confirmButtonText: "Beli"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        method:"POST",
                        url:'@Url.Action("remove","color")',
                        data: {id},
                        success:(result)=>{

                            if(!result.error)
                            {
                                Swal.fire({
                                    title: "Deleted!",
                                    text: result.message,
                                    icon: "success"
                                });

                                setTimeout(()=> {
                                    location.reload();
                                },[3000])

                                return;
                            }
                            Swal.fire({
                                title: "Not Deleted!",
                                text: result.message,
                                icon: "error"
                            });


                        },
                        error:(error)=>{
                            console.error(error)
                        }
                    })

                   
                }
            });
        }
    </script>
}


