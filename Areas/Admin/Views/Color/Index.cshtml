@using BigonApp.Infrastructure.Entities
@model IEnumerable<Color>

<div class="card">
    <div class="card-header">
        <div>
            <h5>Colors</h5>
            <a class="btn btn-success" asp-action="create" asp-controller="color">+Add</a>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Color</th>
                        <th>Name</th>
                    </tr>
                </thead>
                <tbody id="tableBody">
                  <partial name="_Body" model="@Model"/>
                </tbody>
            </table>
        </div>
    </div>
</div>



@section custom_js{
    <script>
        function removeColor(id,name){

            const tableBody=$("#tableBody")


            Swal.fire({
                title: "Əminsinizmi?",
                text: `${name} rengi silmek isteyirsinizmi!`,
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                cancelButtonText: "Xeyr",
                confirmButtonText: "Beli"
            }).then((result) => {
                if (result.isConfirmed) {

                    $.ajax({
                        method:"POST",
                        url:'@Url.Action("remove","color")',
                        data: {id},
                        success:(result)=>{

                            if(!result.error)
                            {
                                Swal.fire({
                                    title: "Silindi!",
                                    text: result.message,
                                    icon: "success"
                                });

                                

                                tableBody.html(result);

                                // setTimeout(()=> {
                                //     location.reload();
                                // },[3000])

                                return;
                            }
                            Swal.fire({
                                title: "Silinmedi!",
                                text: result.message,
                                icon: "error"
                            });


                        },
                        error:(error)=>{
                            console.error(error)
                        }
                    })

                   
                }
            });
        }
    </script>
}


